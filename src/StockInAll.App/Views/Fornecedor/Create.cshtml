@model StockInAll.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Criar Fornecedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">

                <div class="form-group col-md-6 col-lg-4">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" id="nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 col-lg-4">
                    <label asp-for="Ramo" class="control-label"></label>
                    <input asp-for="Ramo" class="form-control" id="ramo" />
                    <span asp-validation-for="Ramo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 col-lg-4">
                    <label asp-for="RazaoSocial" class="control-label"></label>
                    <input asp-for="RazaoSocial" class="form-control" id="razaosocial" />
                    <span asp-validation-for="RazaoSocial" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 col-lg-4">
                    <label asp-for="Rua" class="control-label"></label>
                    <input asp-for="Rua" class="form-control" id="rua" />
                    <span asp-validation-for="Rua" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 col-lg-4">
                    <label asp-for="Numero" class="control-label"></label>
                    <input asp-for="Numero" class="form-control" id="numero" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 col-lg-4">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input asp-for="Bairro" class="form-control" id="bairro" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 col-lg-4">
                    <label asp-for="Cidade" class="control-label"></label>
                    <input asp-for="Cidade" class="form-control" id="cidade" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 col-lg-4">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control" id="estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 col-lg-4">
                    <label asp-for="Complemento" class="control-label"></label>
                    <input asp-for="Complemento" class="form-control" id="numero" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group text-right">
                <a asp-action="Index" class="btn btn-primary"><i class="fa fa-arrow-left"></i></a>

                <input type="submit" id="cadastrarBtn" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/busca.js"></script>
    <script>
        inicializa();
         function PreencherCampo(mensagem) {


                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Buscar","PreencherCampos")',
                    data: { "mensagem": mensagem },
                    success: function (result) {

                        if (result.sucesso.prediction.topIntent == "PreencherCampo") {

                            if (result.sucesso.prediction.entities.campo != null) {
                                var campo = "#" + result.sucesso.prediction.entities.campo[0];
                                var campoTratado = retira_acentos(campo).replace(/\s/g, '');
                                var valor = result.sucesso.prediction.entities.valor[0];
                                $(campoTratado).val(valor);
                                    console.log(campoTratado);
                            }
                            
                        }
                        else if(result.sucesso.prediction.topIntent == "CreateItem"){
                            $('#cadastrarBtn').click();
                        }
                        else if (result.sucesso.prediction.topIntent == "Back") {
                            window.location.href = "@Url.Action("Index")";
                        }



                    },
                    error: function (result) {
                        console.log("erro");
                    }

                });
        }

        function inicializa() {
            document.addEventListener('keydown', pegaTecla);
        }

        function pegaTecla() {

            var tecla = event.keyCode;
            if (tecla == 17) {
                $('#speakbt').click();
            }
        }

        function retira_acentos(str) {

            com_acento = "ÀÁÂÃÄÅÆÇÈÉÊËÌÍÎÏÐÑÒÓÔÕÖØÙÚÛÜÝŔÞßàáâãäåæçèéêëìíîïðñòóôõöøùúûüýþÿŕ";

            sem_acento = "AAAAAAACEEEEIIIIDNOOOOOOUUUUYRsBaaaaaaaceeeeiiiionoooooouuuuybyr";
            novastr = "";
            for (i = 0; i < str.length; i++) {
                troca = false;
                for (a = 0; a < com_acento.length; a++) {
                    if (str.substr(i, 1) == com_acento.substr(a, 1)) {
                        novastr += sem_acento.substr(a, 1);
                        troca = true;
                        break;
                    }
                }
                if (troca == false) {
                    novastr += str.substr(i, 1);
                }
            }
            return novastr;
        }  
    </script>
}
