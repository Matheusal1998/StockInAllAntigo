@model StockInAll.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>FornecedorViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"  id="nome"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ramo" class="control-label"></label>
                <input asp-for="Ramo" class="form-control" id="ramo" />
                <span asp-validation-for="Ramo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="cadastrarBtn" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="conteiner" style="display: none">

    <h1>Busca por voz</h1>

    <div class="search">

        <button id="speakbt">Buscar</button>

        <div id="resultSpeak">Retorno</div>

    </div>

</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/busca.js"></script>
    <script>
        inicializa();
         function PreencherCampo(mensagem) {


                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Buscar","PreencherCampos")',
                    data: { "mensagem": mensagem },
                    success: function (result) {

                        if (result.sucesso.prediction.topIntent == "PreencherCampo") {
                            var campo = "#" + result.sucesso.prediction.entities.campo[0];
                            var valor = result.sucesso.prediction.entities.valor[0];
                            $(campo).val(valor);
                        }
                        else if(result.sucesso.prediction.topIntent == "CreateItem"){
                            $('#cadastrarBtn').click();
                        }
                        else if (result.sucesso.prediction.topIntent == "Back") {
                            window.location.href = "@Url.Action("Index")";
                        }



                    },
                    error: function (result) {
                        console.log("erro");
                    }

                });
        }

        function inicializa() {
            document.addEventListener('keydown', pegaTecla);
        }

        function pegaTecla() {

            var tecla = event.keyCode;
            if (tecla == 17) {
                $('#speakbt').click();
            }
        }
    </script>
}
